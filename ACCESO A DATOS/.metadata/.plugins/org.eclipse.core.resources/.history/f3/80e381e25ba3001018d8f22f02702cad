package fichero;

import java.io.File;
import java.io.IOException;

import org.apache.logging.log4j.LogManager;
import org.apache.logging.log4j.Logger;

public class PruebaFichero {
	
	private static final Logger logeador= LogManager.getLogger(PruebaFichero.class);
	public static void main(String[] args) {
		
	
	String rutaDirectorio = "C:\\Users\\ManuelParrado\\Desktop";
	File directorio = new File(rutaDirectorio);
	// Referencio a un fichero dentro del directorio soraya
	File fichero = new File(directorio, "Thatwasepic.txt");
	try {
		boolean creado = fichero.createNewFile(); // Aquí Sí creo fichero
	} catch (IOException e) {
		// TODO Auto-generated catch block
		logeador.error("Error al crear fichero:" + e.getMessage());
	}
	

}
}