package fichero;

import java.io.File;

import org.apache.logging.log4j.LogManager;
import org.apache.logging.log4j.Logger;

public class Ejercicio4 {

	private static final Logger logeador = LogManager.getLogger(Ejercicio4.class);
	public static void main(String[] args) {
		String cagarruta= "C:\\Users\\ManuelParrado\\Desktop\\SEGUNDO_DAM";
	
	}	
	public void mostrarcontenidodirectorio(File carpeta) {
		boolean existe= carpeta.isDirectory();
		if(existe) {
		File[] archivos=carpeta.listFiles();
		
		for(File archivo: archivos) {
			if(archivo.isFile()) {
				logeador.info(archivo.getPath());  
				logeador.info(archivo.getName());  

			}
			else {
				this.mostrarcontenidodirectorio(archivo);
			}
			
				
			
		}
		}
	}
	}

